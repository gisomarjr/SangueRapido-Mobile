<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="br.com.laboratorio.hemope.Paciente.DetalheDiagnosticoActivity$PlaceholderFragment">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:id="@+id/imgCapa"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dados do Diagn贸stico"
            android:id="@+id/dadosDiagnostico"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nome do paciente"
            android:id="@+id/labelNomePaciente"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF"
            android:id="@+id/labelCpf"
            android:autoLink="web"
            android:clickable="true"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C贸digo da Amostra"
            android:id="@+id/labelCodAmostra"
            android:autoLink="web"
            android:clickable="true"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="C贸digo do Diagn贸stico"
            android:id="@+id/labelCodigoDiagnostico"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sigla"
            android:id="@+id/labelSigla" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome"
            android:id="@+id/labelNomeDiagnostico" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codigoCid"
            android:id="@+id/labelCodigoCid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescricaoCID"
            android:id="@+id/labelDescricaoCid" />



    </LinearLayout>

</ScrollView>


