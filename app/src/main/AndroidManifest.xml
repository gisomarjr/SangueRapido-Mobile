<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.laboratorio.hemope" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Paciente.PacienteActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Paciente.DetalhePacienteActivity"
            android:label="@string/title_activity_detalhe_paciente"
            android:parentActivityName=".Paciente.PacienteActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.laboratorio.hemope.Paciente.PacienteActivity" />
        </activity>
        <activity
            android:name=".Util.Scan"
            android:label="@string/title_activity_scan" >
        </activity>
        <activity
            android:name=".AcaoPrincipalActivity"
            android:label="@string/title_activity_acao_principal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Aliquota.AliquotaActivity"
            android:label="@string/title_activity_aliquota" >
        </activity>
    </application>

</manifest>
